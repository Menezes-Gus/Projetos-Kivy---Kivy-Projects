<WidgetsExample>:
    cols: 3
    ToggleButton:
        text: "OFF"
        on_state: root.on_toggle_button_state(self)
    Button:
        text: "Click Here"
        on_press: root.on_button_click()
        disabled: not root.cont_enable
    Label:
        text: root.my_text
        font_name: "fonts/Lcd.ttf"
        font_size: "80dp"
    Switch:
        id: my_switch
        on_active: root.on_switch_active(self)
        active: True
    Slider:
        id: my_slider
        disabled: not my_switch.active
        min: 0
        max: 100
        value: 75
        orientation: "vertical"
        on_value: root.on_slider_value(self)
    BoxLayout:
        orientation: "vertical"
        Label:
            #text: root.slider_value_txt
            text: str(int(my_slider.value))
            font_name: "fonts/Lcd.ttf"
            font_size: "80dp"
        ProgressBar:
            max: 100
            value: int(my_slider.value)
    TextInput:
        id: my_text_input
        text: "Foo"
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text: root.text_input_str

